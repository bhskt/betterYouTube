{
    "manifest_version": 2,
    "name": "Better YouTube",
    "description": "Shows the like dislike rating bar over all video thumbnails on YouTube. Now you don't have to open each one of them to know its rating.",
    "version": "1.0",
    "icons": {
        "128": "icon.png"
    },
    "author": "Bhaskar Tiwari",
    "background": {
        "scripts": ["scripts/script.js"],
        "persistent": true
    },
    "content_scripts": [
        {
            "matches": ["*://*.youtube.com/*"],
            "css": ["content_stylesheet.css"],
            "js": ["scripts/content_script.js"],
            "run_at": "document_start"
        }
    ],
    "permissions": [
        "http://*.jsontest.com/",
        "https://*.jsontest.com/",
        "webNavigation"
    ],
    "short_name": "BYT"
}